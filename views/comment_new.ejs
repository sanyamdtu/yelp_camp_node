<%- include("partials/header") %>

    <div>
        <div class="container text-center">
            <h2>
                ADD A NEW Comment to
                <%= camp.title %>
            </h2>
        </div>
        <form action="/camp/<%= camp._id %>/comments" method="POST">
            <div class="container" style="margin: 20px auto;width: 30%;">
                <div class="form-group">
                    <label for="formGroupExampleInput">Title of the Comment</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example: xyz" name="title">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Authore of the Comment</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Example: Mr. XYZ" value="<%= current_user.username %> " readonly>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg form-control">
                </div>
            </div>
        </form>
    </div>

    <%- include("partials/footer") %>