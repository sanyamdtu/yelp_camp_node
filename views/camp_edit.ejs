<%- include('partials/header') -%>
    <div>
        <div class="container text-center">
            <h2>
                Edit Campsite
            </h2>
        </div>
        <form action="/camp/<%= camp._id %>?_method=PUT" method="POST">
            <div class="container" style="margin: 20px auto;width: 30%;">
                <div class="form-group">
                    <label for="formGroupExampleInput">Name of the Camp</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="<%= camp.name %> " name="name">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Image URL</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" value="<%= camp.image %> " name="url">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Description of the Camp</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="<%= camp.desc %> " name="desc">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg form-control">
                </div>
            </div>
        </form>
    </div>
    <%- include('partials/footer') -%>