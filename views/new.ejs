<%- include('partials/header') -%>
    <div>
        <div class="container text-center">
            <h2>
                ADD A NEW CAMPSITE
            </h2>
        </div>
        <form action="/camp" method="POST">
            <div class="container" style="margin: 20px auto;width: 30%;">
                <div class="form-group">
                    <label for="formGroupExampleInput">Name of the Camp</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example: xyz" name="name">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Image URL</label>
                    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Example: www.abc@xyz.com" name="url">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Description of the Camp</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example: xyz" name="desc">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg form-control">
                </div>
            </div>
        </form>
    </div>
    <%- include('partials/footer') -%>