<%- include('partials/header') -%>
    <div>
        <div class="container text-center">
            <h2>
                Edit Comments:-
            </h2>
        </div>
        <form action="/camp/<%= camp._id %>/comments/<%= comm._id %>?_method=PUT" method="POST">
            <div class="container" style="margin: 20px auto;width: 30%;">
                <div class="form-group">
                    <label for="formGroupExampleInput">Title of the Comment</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="<%= comm.title %> " name="updated_title">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Author of the Comment</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" value="<%= current_user.username %> " name="updated_username" readonly>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg form-control">
                </div>
            </div>
        </form>
    </div>
    <%- include('partials/footer') -%>