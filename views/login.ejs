<%- include('partials/header') -%>
    <div>
        <div class="container text-center">
            <h2>
                Please Login
            </h2>
        </div>
        <form action="/login" method="POST">
            <div class="container" style="margin: 20px auto;width: 30%;">
                <div class="form-group">
                    <label for="formGroupExampleInput">Username</label>
                    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example: xyz" name="username">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Password</label>
                    <input type="password" class="form-control" id="formGroupExampleInput" placeholder="Example: 1234$xxyy" name="password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg form-control">
                </div>
            </div>
        </form>
    </div>
    <%- include('partials/footer') -%>